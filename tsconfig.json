{
    "compilerOptions": {
        "module": "ESNext",
        "outDir": ".",
        "rootDir": "./src",
        "target": "ES2018",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "baseUrl": "./"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "client.*",
        "server.*",
        "*.config.js"
    ]
}
