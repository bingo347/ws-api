{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2018",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "baseUrl": "./"
    }
}
